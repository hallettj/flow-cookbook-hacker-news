{
  "name": "flow-cookbook-hacker-news",
  "version": "1.0.0",
  "description": "Example that demonstrates type-checking API data with Flow",
  "main": "index.js",
  "scripts": {
    "flow": "flow",
    "start": "npm run build && node --require 'regenerator-runtime/runtime' --eval \"require('./index').main()\"",

    "test": "flow check",
    "build": "make",
    "prepublishOnly": "npm test && npm run build",

    "prepublish":
      "(not-in-publish && echo 'Skipping prepublish') || npm run require-npm4-to-publish",

    "require-npm4-to-publish":
      "semver -r '>=4.0.0' $(npm --version) || (echo 'NPM 4+ required to publish' && exit 1)"
  },
  "author": "Jesse Hallett <jesse@sitr.us>",
  "license": "MIT",
  "babel": {
    "presets": [
      "react",
      "stage-3",
      "es2015"
    ]
  },
  "files": [
    "index.js",
    "index.js.flow",
    "index.js.map"
  ],
  "dependencies": {
    "node-fetch": "*"
  },
  "devDependencies": {
    "babel-cli": "^6.18",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "flow-bin": "^0.36",
    "in-publish": "^2.0.0"
  }
}
